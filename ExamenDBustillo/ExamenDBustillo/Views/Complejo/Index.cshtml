
@{
    ViewBag.Title = "Index";
}


<head>
    <script src="~/App/Controller/ComplejoCtrl.js"></script>

    <style type="Text/CSS">
        .Center_h, .Center_btn {
            font-family: 'Times New Roman';
            font-size: 16px;
            text-align: center;
        }

        .ListaDatos {
            font-family: 'Times New Roman';
            font-size: 14px;
            text-align: center;
        }

        .btn-primary {
            font-family: 'Times New Roman';
        }
    </style>


</head>

<br />
<div class="container" ng-app="appComplejo" ng-controller="ComplejoCtrl">
    <div class="row">
        <div class="col-md-12">




            <table class="table table-striped table-responsive">
                <tr>
                    <th class="Center_h">ID</th>
                    <th class="Center_h">Nombre</th>
                    <th class="Center_h">Telefono</th>
                    <th class="Center_h">Direccion</th>
                    <th class="Center_h"></th>
               </tr>

                <tr ng-repeat="item in ListaComplejo" class="ListaDatos">

                    <td class="Center_h" width="70"> {{item.ID}}  </td>
                    <td class="Center_h"> {{item.Nombre}} </td>
                    <td class="Center_h"> {{item.Telefono}} </td>
                    <td class="Center_h"> {{item.Direccion}} </td>
                    
                    <td class="Center_btn" width="170px">
                        <button type="button" ng-click="EditarRegistro(item)" class="btn btn-success">Editar</button>
                        <button type="button" ng-click="EliminarRegistro(item)" class="btn btn-danger">Borrar</button>
                    </td>
                </tr>

                <tr ng-if="MostrarControles">

                    <td class="success"><input type="text" disabled="disabled" class="form-control" placeholder="ID" ng-model="Registro.ID" /> </td>
                    <td class="success"><input type="text" class="form-control" placeholder="Nombre" maxlength="15" name="Nombre" ng-model="Registro.Nombre" /></td>
                    <td class="success"><input type="text" class="form-control" placeholder="Telefono" maxlength="15" name="Telefono" ng-model="Registro.Telefono" /></td>
                    <td class="success"><input type="text" class="form-control" placeholder="Direccion" maxlength="50" name="Direccion" ng-model="Registro.Direccion" /></td>
                    
                    <td class="Center_btn success">
                        <button type="button" ng-click="Guardar(item)" class="btn btn-success btn-md">Aceptar</button>
                        <button type="button" ng-click="Limpiar(item)" class="btn btn-danger btn-md">Cancelar</button>
                    </td>
                </tr>
            </table>
            <button type="button" ng-click="NuevoRegistro()" class="btn btn-primary btn-lg">Agregar</button>

        </div>
    </div>
</div>


